uniform vec2 iResolution;
uniform float iGlobalTime;
#define _ vec2((gl_FragCoord.xy*2.001-iResolution.xy )/iResolution.y)
void main(){
	float c = abs(0.1/sin(_.x *12.)- cos( _.y) )* abs(0.01 / sin( _.y * 12.) - .1 / cos(_.x ) );
	gl_FragColor.rgb = vec3(1., 0., 0.) * 0.1 + sqrt( vec3(.2, .7, .9) * max(0.01, dot( c , .5/length(_ - vec2(.21-sin(iGlobalTime), cos(iGlobalTime*.5) ) ) ) ) ) ;
	gl_FragColor.a = 1.;
}